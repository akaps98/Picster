<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:gravity="center"
    tools:context=".AdminFeedActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            app:srcCompat="@drawable/back" />

        <ImageView
            android:id="@+id/logoImageView"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/title_logo" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="20dp">
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="300dp"
            android:layout_marginRight="10dp">
            <ImageView
                android:id="@+id/feedUserImage"
                android:layout_width="55dp"
                android:layout_height="55dp"
                app:srcCompat="@drawable/user_sample" />
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/feedUserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Username"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textColor="#000000"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="670dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/feedDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="55dp"
                android:text="YYYY.MM.DD"
                android:textAlignment="textEnd"
                android:textColor="#000000" />

            <ImageView
                android:id="@+id/feedPicture"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:background="#E7F2F4"
                app:srcCompat="@drawable/pic_sample1" />

            <TextView
                android:id="@+id/feedText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="55dp"
                android:layout_marginVertical="10dp"
                android:text="Feed text feed text feed text feed text."
                android:textColor="#000000"
                android:textSize="17dp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>