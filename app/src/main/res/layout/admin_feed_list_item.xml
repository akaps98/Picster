<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/feedImage"
            android:layout_width="170dp"
            android:background="#E7F2F4"
            android:layout_height="170dp"
            android:layout_marginRight="10dp"
            app:srcCompat="@drawable/pic_sample1" />

        <LinearLayout
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:orientation="vertical" >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:orientation="horizontal"
                android:gravity="center">
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="300dp"
                    android:layout_marginRight="10dp">
                    <ImageView
                        android:id="@+id/userMainImage"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        app:srcCompat="@drawable/user_sample" />
                </androidx.cardview.widget.CardView>
                <TextView
                    android:id="@+id/feedUser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="4dp"
                    android:text="User"
                    android:textColor="#000000"
                    android:textSize="19dp"
                    android:textStyle="bold"/>
            </LinearLayout>
            <TextView
                android:id="@+id/feedText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Feed text feed text text text text text."
                android:textColor="#000000"
                android:textSize="17dp" />


            <TextView
                android:id="@+id/feedDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="YYYY.MM.DD"
                android:textColor="#000000"
                android:textSize="14dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/deletePostButton"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:focusable="false"
                    android:background="@color/red"
                    android:text="Delete" />

                <Button
                    android:id="@+id/freePostButton"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="7dp"
                    android:layout_weight="1"
                    android:focusable="false"
                    android:background="@android:color/holo_green_dark"
                    android:text="Free" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>